                    <div class="row mb-4 justify-content-center">
                        <% products.forEach(p => { %>
                            <div class="col-md-4 col-sm-6 col-xs-12 mb-4">
                                <div class="card card-with-shadow h-100">
                                    <div class="img-wrapper">
                                        <img src="/images/products/<%= p.firstImg %>" class="card-img-top" alt="img-principal">
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title text-center">
                                            <%= p.name %>
                                        </h5>
                                        <p class="card-text text-center">$<%= p.price %></p>
                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-around">
                                                <a href="/productos/detalle-producto/<%= p.id %>" class="btn btn-primary">VER MÁS</a>
                                                <button class="btn btn-success" type="button" onclick="addProductCart('<%= p.id %>')">
