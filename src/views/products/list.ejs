<!DOCTYPE html>
<html lang="es">
<%- include("../partials/head", {title: 'Lista de jueguetes' }) %>

    <body>
        <!-- Header -->
        <%- include("../partials/header") %>
            <!-- /Header -->
            <main>
                <div class="container">
                    <div class="row my-4">
                        <h2 class="text-center">LISTADO DE PRODUCTOS</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="dataTables_wrapper form-inline dt-bootstrap">
                                <div class="row mb-4">
                                    <div class="col-sm-6 ">
                                        <div class="d-flex align-items-center">
                                            <label for="datatable_length">Mostrar </label>
                                            <select name="datatable_length" aria-controls="datatable"
                                                class="form-control input-sm custom-select-sm">
                                                <option value="10">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                            <label for="datatable_length" class="ml-2"> registros</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row  mb-4">
                        <div class="col-sm-12 d-flex flex-wrap gap-2">
                            <% products.forEach(p=> { %>
                                <div class="card card-with-shadow">
                                    <div class="img-wrapper">
                                        <img src="/images/products/<%= p.firstImg %>" class="card-img"
                                            alt="img-principal">
                                    </div>
                                    <div class="card-body card-body-custom">
                                        <h5 class="card-title-custom ">
                                            <%= p.name %>
                                        </h5>
                                        <div class="d-flex flex-row justify-content-between align-items-center">
                                            <p class="card-text card-text-custom">$<%= p.price %>
                                            </p>
                                            <a href="/productos/detalle-producto/<%= p.id %>"
                                                class="btn btn-register-custom">VER MÁS</a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <!-- <% products.forEach(p=> { %>
                            <div class="card p-0 shadow col-4 d-flex flex-column justify-content-between">
                                <div class="card card-with-shadow img-container">
                                    <div class="img-wrapper">
                                        <img src="/images/products/<%= p.firstImg %>" class="card-img"
                                            alt="img-principal">
                                    </div>
                                    <div class="card-body card-body-custom d-flex flex-column justify-content-between">
                                        <h5 class="card-title card-title-custom"><%= p.name %></h5>
                                    </div>
                                    <div class="d-flex flex-column justify-content-between align-items-center">
                                        <p class="card-text card-text-custom">$<%= p.price %> </p>
                                        <a href="/productos/detalle-producto/<%= p.id %>" class="btn btn-register-custom">VER MÁS</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %> -->
                    </div>


                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Mostrando
                                1 a <%= products.length %> de <%= products.length %> registros
                            </div>
                        </div>
                        <div class="col-sm-6 d-flex justify-content-end">
                            <nav aria-label="...">
                                <ul class="pagination">
                                    <li class="page-item disabled">
                                        <span class="page-link">Anterior</span>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active" aria-current="page">
                                        <span class="page-link">2</span>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Siguiente</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </main>
            <!-- Footer -->
            <%- include("./partials/footer") %>
                <!-- /Footer -->
                <!-- scripts -->
                <%- include("../partials/scripts") %>
                    <!-- /scripts -->
    </body>

</html>